MONGODB_DB_NAME=tracking

# Cache
REDIS_URL=redis://localhost:6379
REDIS_TTL_DEFAULT=300

# Message Broker
KAFKA_BROKERS=localhost:9093
KAFKA_CLIENT_ID=tracking-service
KAFKA_GROUP_ID=tracking-group

